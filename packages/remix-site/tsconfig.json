{
  "include": ["env.d.ts", "**/*.ts", "**/*.tsx", "server/index.ts", "bin/cdk-remix-app.ts"],
  "exclude": ["node_modules", "cdk.out"],
  "compilerOptions": {
    "lib": ["dom", "DOM.Iterable", "ESNext"],
    "esModuleInterop": true,
    "jsx": "react-jsx",
    //migrating to vite
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "target": "ES2019",
    "strict": true,
    "paths": {
      "~/*": ["./app/*"]
    },

    // Remix takes care of building everything in `remix build`.
    "noEmit": true
  }
}
